<% 
maps = Map.order("updated_at").limit(10)
%>

<div id="maps-carousel" class="carousel">
  <!-- Carousel items -->
  <div class="carousel-inner">
    <% maps.each_with_index do |map, index| %>
      <% if index == 0 %>
        <div class="active item">
      <% else %>
        <div class="item">
      <% end %>
          <center><%= link_to image_tag(map.thumbnail_uri, :alt => "#{map.title}"), map %></center>
          <div class="carousel-caption">
            <h4><%= map.title %></h4>
            <p><%= map.subject %></p>
          </div>
        </div>
    <% end %>
  </div>
</div>